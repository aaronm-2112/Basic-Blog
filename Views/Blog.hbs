<body>
  <header>
    <img src="{{titleImagePath}}" alt="Title Image">
    <h1>{{title}}</h1>
    <h2>{{username}}</h2>
  </header>

  <div>
    {{content}}
  </div>
</body>

<footer>
  <p>Footer stuff</p>
</footer>

<button id="comment">Comments</button>

<script>
  async function commenttest() {
    try {
      let response = await fetch(`http://localhost:3000/comments?reply=false&replyto=0&orderby=likes&likes=1000&commentid=1000`, {
        method: 'GET', headers: { 'Content-Type': 'application/json' }
      });
    } catch (e) {

    }
  }

  document.getElementById('comment').addEventListener("click", commenttest);

</script>